@model MVC.Models.Prostopadloscian

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<h4>Prostopadloscian</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Wysokosc" class="control-label"></label>
                    <input type="text" asp-for="Wysokosc" class="form-control" />
                <span asp-validation-for="Wysokosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Szerokosc" class="control-label"></label>
                <select asp-for="Szerokosc" class="form-control">
                <option value="1">1</option>
                <option value="5">5</option>
                <option value="10">10</option>
                </select>
                <span asp-validation-for="Szerokosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grubosc" class="control-label"></label>
                    1<input type="radio" value="1" asp-for="Grubosc" class="form-control" />
                    2<input type="radio" value="2" asp-for="Grubosc" class="form-control" />
                    6<input type="radio" value="6" asp-for="Grubosc" class="form-control" />
                    12<input type="radio" value="12" asp-for="Grubosc" class="form-control" />
                <span asp-validation-for="Grubosc" class="text-danger"></span>
            </div>


                <div class="form-group">
                    <label asp-for="Obliczenia" class="control-label"></label>
                    
                    Objetosc<input type="checkbox" name="Obliczenia" value="Objetosc">
                    Pole powierzchni<input type="checkbox" name="Obliczenia" value="PolePowierzchni">
                    Dlugosc Krawedzi<input type="checkbox" name="Obliczenia" value="DlugoscKrawedzi">
                </div>
                @if (Model.Obliczenia != null) { 
                @if (Model.Obliczenia.Contains("PolePowierzchni"))
                {
                    <p class="form-group">
                        <label asp-for="PolePowierzchni" class="control-label"></label>
                        @Model.PolePowierzchni
                        <span asp-validation-for="PolePowierzchni" class="text-danger"></span>
                    </p>
                }
                
                @if (Model.Obliczenia.Contains("Objetosc"))
                {
                    <p class="form-group">
                        <label asp-for="Objetosc" class="control-label"></label>
                        @Model.Objetosc
                        <span asp-validation-for="Objetosc" class="text-danger"></span>
                    </p>
                }
                @if (Model.Obliczenia.Contains("DlugoscKrawedzi"))
                {
                    <p class="form-group">
                        <label asp-for="DlugoscKrawedzi" class="control-label"></label>
                        @Model.DlugoscKrawedzi
                        <span asp-validation-for="DlugoscKrawedzi" class="text-danger"></span>
                    </p>
                }  
                    }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

</body>
</html>
